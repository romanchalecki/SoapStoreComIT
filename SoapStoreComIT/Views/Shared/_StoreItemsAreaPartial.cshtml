@model IEnumerable<StoreItem>
@*
*@

@if (Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty) show-all">
        <div class="row">
            <h3 class="text-right" style="color:lightblue">@Model.FirstOrDefault().Category.Name</h3>
        </div>

        @foreach(var item in Model)
        {
            <div class="border border-info rounded col-12" style="margin-bottom: 10px;margin-top: 10px;padding: 10px;">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        @if(item.Image == null)
                        {
                            <img srcset="/images/Noimageavailable.png" width="99%" style="border-radius:5px;border:1px solid #bbb9b9" />
                        }
                        <img src="@item.Image" width="99%" style="border-radius:5px;border:1px solid #bbb9b9" />
                        
                    </div>

                        <div class="col-md-9 col-sm-12">
                            <div class="row pr-3">
                                <div class="col-8">
                                    <label class="text-right" style="font-size:20px; color:steelblue">@item.Name</label>
                                </div>
                                <div class="col-4 text-right" style="color:slateblue" >
                                    <h4>CA$@item.Price</h4>
                                </div>
                            </div>

                            <div class="row col-12 text-justify d-none d-md-block">
                                <p>@Html.Raw(item.Description)</p>
                            </div>

                            <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                                <a asp-action="MoreStoreItem" class="btn btn-success form-control" asp-route-id="@item.Id">More</a>
                            </div>
                        </div>

                    </div>
                </div>
        }
        <div class="p-4"></div>
    </div> 
}
