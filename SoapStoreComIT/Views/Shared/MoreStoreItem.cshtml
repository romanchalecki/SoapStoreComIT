@model SoapStoreComIT.Models.ShoppingCart
@using SoapStoreComIT.Extensions

<br />
<h2 class="text-info">Product Details</h2>
<br />


<form method="post"  asp-action="AddToCart" asp-controller="Home">

    <div class="border backgroundWhite row">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>


        <div class="col-8">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="StoreItem.Name" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input disabled asp-for="StoreItem.Name" readonly class="form-control" />
                </div>
            </div>

            @if (Model.StoreItem.Quantity > 0)
            {
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StoreItem.Price" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="StoreItem.Price" readonly class="form-control" />
                    </div>
                </div>
            }

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StoreItem.Description" readonly class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <div class="border p-2">
                            @Html.Raw(Model.StoreItem.Description)
                        </div>
                        </div>
                    </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StoreItem.Weight" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="StoreItem.Weight" readonly class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StoreItem.Ingridients" readonly class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <div class="border p-2">
                            @Html.Raw(Model.StoreItem.Ingridients)
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StoreItem.Category.Name" class="col-form-label"></label>
                    </div>
                    <div class="col-8" disabled>
                        <input disabled asp-for="StoreItem.Category.Name" readonly class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StoreItem.SubCategory.Name" class="col-form-label"></label>
                    </div>
                    <div class="col-8" disabled>
                        <input disabled asp-for="StoreItem.SubCategory.Name" readonly class="form-control" />
                    </div>
                </div>

                @if (Model.StoreItem.Quantity > 0)
                {
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Count" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input type="number" min="1" max="@Model.StoreItem.Quantity" asp-for="Count" class="form-control" />
                            <span asp-validation-for="Count" class="text-danger"></span>
                        </div>
                    </div>
                }

                <div class="form-group row">

                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success form-control">Go Back</a>
                    </div>

                    @if (Model.StoreItem.Quantity > 0)
                    {
                        <div class="col-6">
                            <input type="submit" asp-action="AddToCart" asp-route-id="@Model.StoreItemId"  value="Add to Cart" class="btn btn-warning form-control" />
                        </div>
                    }

                </div>

            </div>



        <div class="col-3 offset-1">
            <img src="@Model.StoreItem.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>


    </div>
</form>


    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}




