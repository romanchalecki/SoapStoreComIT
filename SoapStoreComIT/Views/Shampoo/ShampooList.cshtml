@model SoapStoreComIT.Views.ViewModels.ShampooList

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Shampoo List</h2>
        </div>
        <div class="cool-6 text-right">
            <a asp-controller="Shampoo" asp-action="CreateNewShampoo" class="btn btn-info from-control text-white">Create New Shampoo</a>
        </div>
    </div>
    <br />


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (@Model.Shampoos.Count() > 0)
            {
                <table class="table-striped border">
                    <tr class="table-secondary">
                        <td>
                            <label asp-for="Shampoos.FirstOrDefault().Name"></label>
                        </td>
                        <td>
                            <label asp-for="Shampoos.FirstOrDefault().Contents"></label>
                        </td>
                        <td>
                            <label asp-for="Shampoos.FirstOrDefault().Price"></label>
                        </td>
                        <td>
                            <label asp-for="Shampoos.FirstOrDefault().Description"></label>
                        </td>
                        <td>
                            <label asp-for="Shampoos.FirstOrDefault().Ingridients"></label>
                        </td>
                        <td>
                            <label asp-for="Shampoos.FirstOrDefault().Quantity"></label>
                        </td>
                    </tr>
                    @foreach (var item in Model.Shampoos)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Contents)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Ingridients)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Quantity)
                            </td>
                            <td>
                                <a asp-action="EditShampoo" asp-route-id="@item.Id" class=" btn btn-primary btn-sm text-white">Edit</a>
                                <a asp-action="DeleteShampoo" asp-route-Id="@item.Id" class="btn btn-danger btn-sm text-white">Delete</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>There are no Shampoos available.</p>
            }
        </form>
    </div>
</div>
