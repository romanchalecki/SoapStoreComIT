@model SoapStoreComIT.Models.Shampoo

<br />
<h2 class="text-info">Edit Shampoo</h2>
<br />
<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="@Model.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="@Model.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="@Model.Name" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Name" class="small text-danger"></span>
            <div class="col-4">
                <label asp-for="@Model.Contents"></label>
            </div>
            <div class="col-6">
                <input asp-for="@Model.Contents" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Contents" class="small text-danger"></span>
            <div class="col-4">
                <label asp-for="@Model.Price"></label>
            </div>
            <div class="col-6">
                <input asp-for="@Model.Price" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Price" class="small text-danger"></span>
            <div class="col-4">
                <label asp-for="@Model.Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="@Model.Description" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Description" class="small text-danger"></span>
            <div class="col-4">
                <label asp-for="@Model.Ingridients"></label>
            </div>
            <div class="col-6">
                <input asp-for="@Model.Ingridients" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Ingridients" class="small text-danger"></span>
            <div class="col-4">
                <label asp-for="@Model.Quantity"></label>
            </div>
            <div class="col-6">
                <input asp-for="@Model.Quantity" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Quantity" class="small text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" asp-action="SubmitEditShampoo" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-action="ShampooList" class="btn btn-success form-control">Back to List</a>
            </div>

        </div>
    </form>
</div>
